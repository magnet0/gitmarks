<script type="text/javascript">


      var bPollForControl = false;

	        function loadControl(bProvideSource)
	        {
	          var strCABFileName = "BBWebSLLauncher.cab";
	          var strVersion = "1,0,0,1";
	          var strCodeBase = "";

	          if( bProvideSource )
	          {
	              strCodeBase = "codebase='";
	              strCodeBase += strCABFileName;
	              strCodeBase += "#Version="
	              strCodeBase += strVersion;
	              strCodeBase += "'";
	          }

	          var strAxHTML = "<object classid='clsid:53DBCD97-3FDF-4B60-975B-2596B57482EF' id='launcher' ";
	          strAxHTML += strCodeBase;
	          strAxHTML += " onreadystatechange='onReadyStateChange();' width=0 height=0> </object>";

	          // alert("Setting to " + strAxHTML);

	          axcontrol.innerHTML = strAxHTML;
	        }

	        function startControlPoll()
	        {
	          bPollForControl = true;
	          setTimeout('loadControl(false)', 10000);

	          return true;
	        }

	        function checkPrerequisites(obj)
	        {

	          switch( obj.CheckPrerequisites() )
	          {
	          case 0:
	            document.getElementById('apploaderlaunch').style.display = "block";
	            document.getElementById('apploaderlink').style.display = "none";

	            prereqstatus.innerText = "";
	            break;
	          case 1:
	            document.getElementById('apploaderlaunch').style.display = "none";
	            document.getElementById('apploaderlink').style.display = "block";

	            prereqstatus.innerText = "Prerequisites not met";

	            setTimeout("checkPrerequisites(launcher)", 1500);
	            break;
	          case 2:
	          default:
	            prereqstatus.innerText = "Unexpected result from prerequisites check";
	            alert("Unexpected return from control!");
	            break;
	          }
	        }

                 function upgradeApploader(){
                  
                  //document.getElementById('apploaderlaunch').style.display= "block";
	         //document.getElementById('apploaderlink').style.display = "none";
                  startControlPoll();
window.location.href='http://bfs.websl.blackberry.com/bfs/bfs/apploader/ApploaderWebSL-Upgrade.msi';

                  return true;
                 }

	        function launchLoader()
	        {
	          launcher.Launch(0);
	        }

	        function addRemoveApps()
	        {
	          launcher.Launch(1);
	        }

	        function onLoad()
	        {
                    var browserName=navigator.appName; 
                    if (browserName=="Netscape")
                     { 
document.getElementById('devmontrouble').style.display = "block";

                     }
                      else 
                     { 
                     if (browserName=="Microsoft Internet Explorer")
                     {
document.getElementById('devmontrouble').style.display = "none";

          	      loadControl(false);
                     }
                      
                    }




	        }

	        function onReadyStateChange()
	        {
	           var obj = window.event.srcElement;

	           if( obj.id == "launcher" )
	           {
	               // alert("launcher.readyState = " + obj.readyState);
	  			 if( obj.readyState == 4 && obj.Version )
	  			 {
	  		        bPollForControl = false;

	  		        checkPrerequisites(obj);
	  			 }
	               else
	               {
                           
	                  apploaderlaunch.style.display = "none";
	                  apploaderlink.style.display = "block";

	  		        if( bPollForControl )
	  		        {
	  		            setTimeout("loadControl(false)", 1500);
	  		        }
	  			 }
	           }
	        }
window.onload = onLoad;


    </script>
	
