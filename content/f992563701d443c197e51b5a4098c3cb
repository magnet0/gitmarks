		function submitNewsletterSubscriptionHeaderModule(){
			var postData=$("#newsletterModuleForm").serialize();
			var requestOptions={
						url: '/newsletters/pcw_module_processor',
						data: postData,
						success: function(data,textStatus){
								$("#newsletterSubscribeHeader").fadeOut("slow",function(){
										$(this).html(data).fadeIn("slow");
									})
							}
				
				};
			$.ajax(requestOptions);
		}	
