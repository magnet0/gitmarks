				function submitNewsletterSubscriptionWhitepaper(){
					var postData=$("#newsletterModuleFormWhitepaper").serialize();
					var requestOptions={
								url: '/newsletters/pcw_module_processor',
								data: postData,
								success: function(data,textStatus){
										$("#smbWhitepaperAlert").fadeOut("slow",function(){
												$(this).html(data).fadeIn("slow");
											})
									}
						
						};
					$.ajax(requestOptions)
				}	
